<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">





<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"

        app:titleMarginStart="15dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <include layout="@layout/tech_video" />


    <ImageView
        android:id="@+id/ureckon"
        android:layout_width="234dp"
        android:layout_height="232dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="87dp"
        android:src="@drawable/logo_white" />

    <ImageView
        android:id="@+id/ureckon2"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_below="@+id/ureckon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="83dp"
        android:src="@drawable/logo_white2" />

    <Button
        android:id="@+id/events_button"
        android:layout_width="211dp"
        android:layout_height="74dp"
        android:layout_below="@+id/ureckon2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="62dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Events"
        android:textColor="#F7F8FA"
        android:layout_marginRight="88dp"
        android:background="@drawable/events_button_home"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="211dp"
        android:layout_height="74dp"
        android:layout_below="@+id/events_button"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="login"
        android:textColor="#F7F8FA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="88dp"
        android:background="@drawable/login_button_home"/>
</RelativeLayout>





    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header2"
        app:menu="@menu/drawer_menu" />


</android.support.v4.widget.DrawerLayout>