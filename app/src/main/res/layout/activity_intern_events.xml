<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intern_events">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#004D40"
        android:paddingLeft="@dimen/intrinsic_padding"
        android:paddingRight="@dimen/intrinsic_padding"
        android:paddingTop="@dimen/intrinsic_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbtnfirst"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <android.support.v7.widget.CardView
                android:id="@+id/uicc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DD111111"
                    >

                    <ImageView
                        android:id="@+id/eventImage_event_details"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/post_list_item_image_height"
                        android:layout_marginBottom="@dimen/intrinsic_padding"
                        android:scaleType="centerInside"
                        android:background="#DDDADAD8"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/uicc"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/eventImage_event_details"
                        android:textAlignment="center"
                        android:background="#DDF8F8F6"
                        android:gravity="start"
                        android:layout_marginTop="5dp"
                        android:textColor="#070707"
                        android:textStyle="bold|italic"
                        android:textSize="25dp"
                        android:text="UICC (INT'L CODING CHALLENGE)"

                    />






                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbtnfirst"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <android.support.v7.widget.CardView
                android:id="@+id/tech_script"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DD111111"
                    >

                    <ImageView
                        android:id="@+id/eventImage_event_details2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/post_list_item_image_height"
                        android:layout_marginBottom="@dimen/intrinsic_padding"
                        android:background="#DDDADAD8"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/tech_script"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/eventImage_event_details2"
                        android:textAlignment="center"
                        android:background="#DDF7F7F4"
                        android:gravity="start"
                        android:layout_marginTop="5dp"
                        android:textColor="#050505"
                        android:textStyle="bold|italic"
                        android:textSize="25dp"
                        android:text="TECH SCRIPT (TECHNICAL ARTICLE WRITING)"

                        />






                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbtnfirst"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <android.support.v7.widget.CardView
                android:id="@+id/postx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DD111111"
                    >

                    <ImageView
                        android:id="@+id/eventImage_event_details3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/post_list_item_image_height"
                        android:layout_marginBottom="@dimen/intrinsic_padding"
                        android:scaleType="centerInside"
                        android:background="#DDDADAD8"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/postx"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/eventImage_event_details3"
                        android:textAlignment="center"
                        android:background="#DDF5F5F2"
                        android:gravity="start"
                        android:layout_marginTop="5dp"
                        android:textColor="#414040"
                        android:textStyle="bold|italic"
                        android:textSize="25dp"
                        android:text="POST X (INT'L POSTER COMP.)"

                        />






                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"

            />


    </LinearLayout>


</ScrollView>